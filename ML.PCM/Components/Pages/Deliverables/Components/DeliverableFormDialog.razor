@using Microsoft.Extensions.Localization
@using ML.PCM.Services.Deliverables
@using ML.PCM.Services.Contracts
@using ML.PCM.Services.Dtos.Deliverables
@using ML.PCM.Services.Dtos.Contracts
@using ML.PCM.Enums
@using ML.PCM.Localization
@using ML.PCM.Services.Projects
@using Volo.Abp.Application.Dtos

@inject IContractAppService _contractAppService
@inject IDeliverableAppService _deliverableAppService
@inject IStringLocalizer<PCMResource> L

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">@(Id.HasValue ? "编辑" : "新建") 成果文件</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_isValid">
            <MudGrid>
                <!-- 合同选择 -->
                <MudItem xs="12">
                    <MudAutocomplete T="ContractDto" Label="所属合同" Value="_selectedContract" ValueChanged="OnContractChanged"
                                     SearchFunc="@SearchContracts"
                                     ToStringFunc="@(c => c == null ? null : $"{c.DocumentCode} - {c.Name}")"
                                     Required="true" RequiredError="必须选择一个合同"
                                     Disabled="@Id.HasValue"
                                     Variant="Variant.Outlined"
                                     AdornmentIcon="@Icons.Material.Filled.Search" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudTextField Value="@(Id.HasValue? _currentCode : "自动生成")" Label="文件编号" Variant="Variant.Outlined" ReadOnly="true" Disabled="true" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudSelect T="DeliverableCategory ?" @bind-Value="Model.Category" Label="成果分类" Variant="Variant.Outlined">
                        @foreach (DeliverableCategory item in Enum.GetValues(typeof(DeliverableCategory)))
                        {
                            <MudSelectItem T="DeliverableCategory ?" Value="@item">
                                @L[$"Enum:DeliverableCategory.{item}"]
                            </MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.Name" Label="成果名称" Required="true" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Model.ReferenceNumber" Label="文号" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudDatePicker @bind-Date="Model.ApprovalDate" Label="审批日期" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.Summary" Label="摘要" Lines="3" Variant="Variant.Outlined" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">取消</MudButton>
        <MudButton Color="MudBlazor.Color.Primary" OnClick="Submit" Disabled="@(!_isValid)">提交</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public Guid? Id { get; set; }

    private CreateUpdateDeliverableDto Model { get; set; } = new();
    private ContractDto? _selectedContract;
    private string _currentCode;
    private MudForm _form;
    private bool _isValid;

    protected override async Task OnInitializedAsync()
    {
        if (Id.HasValue)
        {
            var dto = await _deliverableAppService.GetAsync(Id.Value);

            Model.ApprovalDate = dto.ApprovalDate;
            Model.Category = dto.Category;
            Model.ContractId = dto.ContractId;
            Model.Name = dto.Name;
            Model.ReferenceNumber = dto.ReferenceNumber;
            Model.Summary = dto.Summary;

            _currentCode = dto.DocumentCode;

            // 回显合同
            if (dto.ContractId != Guid.Empty)
            {
                var cDto = await _contractAppService.GetAsync(dto.ContractId);
                _selectedContract = cDto;
                Model.Contract = cDto;
            }
        }
    }

    private async Task<IEnumerable<ContractDto>> SearchContracts(string value, CancellationToken token)
    {
        var result = await _contractAppService.GetListAsync(new PagedAndSortedResultRequestDto { MaxResultCount = 20 });
        if (string.IsNullOrEmpty(value)) return result.Items;
        return result.Items.Where(c => c.Name.Contains(value) || c.DocumentCode.Contains(value));
    }

    private void OnContractChanged(ContractDto contract)
    {
        _selectedContract = contract;
        if (contract != null)
        {
            Model.Contract = contract;
            Model.ContractId = contract.Id;
        }
    }

    private async Task Submit()
    {
        await _form.Validate();
        if (_form.IsValid)
        {
            try
            {
                if (Id.HasValue)
                    await _deliverableAppService.UpdateAsync(Id.Value, Model);
                else
                    await _deliverableAppService.CreateAsync(Model);

                MudDialog.Close(DialogResult.Ok(true));
            }
            catch (Exception ex)
            {
                // 这里可以处理异常，或者交给全局异常处理器
                Console.WriteLine(ex.Message);
            }
        }
    }

    private void Cancel() => MudDialog.Cancel();
}