@using Microsoft.Extensions.Localization
@using ML.PCM.Services.Procurements
@using ML.PCM.Services.Projects
@using ML.PCM.Services.DecisionDocuments
@using ML.PCM.Services.Dtos.Procurements
@using ML.PCM.Services.Dtos.Projects
@using ML.PCM.Services.Dtos.DecisionDocuments
@using ML.PCM.Enums
@using ML.PCM.Localization
@using Volo.Abp.Application.Dtos

@inject IProjectAppService _projectAppService
@inject IProcurementAppService _procurementAppService
@inject IDecisionDocumentAppService _decisionAppService
@inject IStringLocalizer<PCMResource> L

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">@(Id.HasValue ? "编辑" : "新建") 招采信息</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_isValid">
            <MudGrid>
                <!-- 1. 项目选择 -->
                <MudItem xs="12">
                    <MudAutocomplete T="ProjectDto" Label="所属项目"
                                     Value="_selectedProject"
                                     ValueChanged="OnProjectChanged"
                                     SearchFunc="@SearchProjects"
                                     ToStringFunc="@(p => p == null ? null : $"{p.ProjectCode} - {p.Name}")"
                                     Required="true"
                                     RequiredError="必须选择一个项目"
                                     Disabled="@Id.HasValue"
                                     Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudTextField Value="@(Id.HasValue? _currentCode : "自动生成")" Label="文件编号" Variant="Variant.Outlined" ReadOnly="true" Disabled="true" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudSelect T="ProcurementCategory ?" @bind-Value="Model.Category" Label="招采分类" Variant="Variant.Outlined" Required="true">
                        @foreach (ProcurementCategory item in Enum.GetValues(typeof(ProcurementCategory)))
                        {
                            <MudSelectItem T="ProcurementCategory ?" Value="@item">@item.ToString()</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.Summary" Label="摘要" Lines="2" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Model.ReferenceNumber" Label="文号" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudDatePicker @bind-Date="Model.DecisionDate" Label="决定日期" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudDatePicker @bind-Date="Model.AnnouncementDate" Label="公告日期" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12" md="6">
                    <MudDatePicker @bind-Date="Model.BidOpeningDate" Label="开标时间" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudDatePicker @bind-Date="Model.BidWinningDate" Label="中标时间" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudNumericField @bind-Value="Model.ControlPrice" Label="控制价" Format="N2" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12" md="6">
                    <MudNumericField @bind-Value="Model.WinningBidAmount" Label="中标金额" Format="N2" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Model.WinningBidder" Label="中标单位" Variant="Variant.Outlined" />
                </MudItem>
                
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Model.ContactPerson" Label="联系人" Variant="Variant.Outlined" />
                </MudItem>

                <!-- 级联：关联决策文件 (多选) -->
                <MudItem xs="12">
                    <MudSelect T="Guid" Label="关联决策文件 (可多选)" MultiSelection="true" @bind-SelectedValues="_selectedDecisionIds"
                               Disabled="@(_selectedProject == null)" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
                        @foreach (var d in _availableDecisions)
                        {
                            <MudSelectItem T="Guid" Value="@d.Id">
                                @($"{d.DocumentCode} - {d.Name}")
                            </MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.Remarks" Label="备注" Lines="2" Variant="Variant.Outlined" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">取消</MudButton>
        <MudButton Color="MudBlazor.Color.Primary" OnClick="Submit" Disabled="@(!_isValid)">提交</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public Guid? Id { get; set; }

    private CreateUpdateProcurementDto Model { get; set; } = new();
    private ProjectDto? _selectedProject;
    private string _currentCode;
    private MudForm _form;
    private bool _isValid;

    // 辅助数据
    private List<DecisionDocumentDto> _availableDecisions = new();
    private IEnumerable<Guid> _selectedDecisionIds { get; set; } = new HashSet<Guid>();

    protected override async Task OnInitializedAsync()
    {
        if (Id.HasValue)
        {
            var dto = await _procurementAppService.GetAsync(Id.Value);

            // 基础回填
            Model.AnnouncementDate = dto.AnnouncementDate;
            Model.BidOpeningDate = dto.BidOpeningDate;
            Model.BidWinningDate = dto.BidWinningDate;
            Model.Category = dto.Category;
            Model.ContactPerson = dto.ContactPerson;
            Model.ControlPrice = dto.ControlPrice;
            Model.DecisionDate = dto.DecisionDate;
            Model.ReferenceNumber = dto.ReferenceNumber;
            Model.Remarks = dto.Remarks;
            Model.Summary = dto.Summary;
            Model.WinningBidAmount = dto.WinningBidAmount;
            Model.WinningBidder = dto.WinningBidder;
            Model.ProjectId = dto.ProjectId;

            _currentCode = dto.DocumentCode;

            // 回显项目
            if (dto.ProjectId != Guid.Empty)
            {
                var pDto = await _projectAppService.GetAsync(dto.ProjectId);
                _selectedProject = pDto;
                Model.Project = pDto;

                // 加载该项目下的决策文件
                await LoadDecisions(dto.ProjectId);
            }

            // 回显已选决策文件
            if (dto.RelatedDecisions != null)
            {
                _selectedDecisionIds = dto.RelatedDecisions.Select(x => x.Id).ToHashSet();
            }
        }
    }

    private async Task<IEnumerable<ProjectDto>> SearchProjects(string value, CancellationToken token)
    {
        var result = await _projectAppService.GetListAsync(new PagedAndSortedResultRequestDto { MaxResultCount = 20 });
        if (string.IsNullOrEmpty(value)) return result.Items;
        return result.Items.Where(p => p.Name.Contains(value) || p.ProjectCode.Contains(value));
    }

    private async Task OnProjectChanged(ProjectDto project)
    {
        _selectedProject = project;
        _selectedDecisionIds = new HashSet<Guid>(); // 清空下级选择

        if (project != null)
        {
            Model.Project = project;
            Model.ProjectId = project.Id;
            await LoadDecisions(project.Id);
        }
        else
        {
            _availableDecisions.Clear();
        }
    }

    private async Task LoadDecisions(Guid projectId)
    {
        // 假设你已经在 DecisionAppService 实现了按项目ID查询的方法
        // 或者使用 GetListAsync 并传入 Filter 参数 (需要 DTO 支持)
        // 这里演示全量加载过滤 (不推荐生产环境，建议后端加 Where)
        var result = await _decisionAppService.GetListAsync(new PagedAndSortedResultRequestDto { MaxResultCount = 1000 });
        _availableDecisions = result.Items.Where(x => x.ProjectId == projectId).ToList();
    }

    private async Task Submit()
    {
        await _form.Validate();
        if (_form.IsValid)
        {
            try
            {
                Model.RelatedDecisionIds = _selectedDecisionIds.ToList();
                if (Id.HasValue)
                {
                    await _procurementAppService.UpdateAsync(Id.Value, Model);
                }
                else
                {
                    await _procurementAppService.CreateAsync(Model);
                }

                MudDialog.Close(DialogResult.Ok(true));
            }
            catch (Exception ex)
            {
                // 这里可以处理异常，或者交给全局异常处理器
                Console.WriteLine(ex.Message);
            }
        }
    }

    private void Cancel() => MudDialog.Cancel();
}