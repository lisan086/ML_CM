@using Microsoft.Extensions.Localization
@using ML.PCM.Services.DecisionDocuments
@using ML.PCM.Services.Projects
@using ML.PCM.Services.Dtos.DecisionDocuments
@using ML.PCM.Services.Dtos.Projects
@using ML.PCM.Enums
@using ML.PCM.Localization
@using Volo.Abp.Application.Dtos

@inject IProjectAppService _projectAppService
@inject IDecisionDocumentAppService _decisionService
@inject IStringLocalizer<PCMResource> L

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">@(Id.HasValue ? "编辑" : "新建") 决策文件</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_isValid">
            <MudGrid>
                <MudItem xs="12">
                    <MudAutocomplete T="ProjectDto" Label="所属项目" Value="_selectedProject" ValueChanged="OnProjectChanged"
                                     SearchFunc="@SearchProjects"
                                     ToStringFunc="@(p => p == null ? null : $"{p.ProjectCode} _ {p.Name}")"
                                     Required="true" RequiredError="必须选择一个项目"
                                     Disabled="@Id.HasValue"
                                     Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudTextField Value="@(Id.HasValue? _currentCode : "自动生成")"
                                  Label="文件编号" Variant="Variant.Outlined" ReadOnly="true" Disabled="true" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudSelect T="DecisionCategory ?" 
                                @bind-Value="Model.Category" 
                                Label="@L["DecisionCategory"]"
                                Variant="Variant.Outlined">

                        @foreach (DecisionCategory item in Enum.GetValues(typeof(DecisionCategory)))
                        {
                            <MudSelectItem T="DecisionCategory ?" Value="@item">
                                @L[$"Enum:DecisionCategory.{item}"]
                            </MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.Name" Label="文档名称" Required="true" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Model.ReferenceNumber" Label="文号" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudDatePicker @bind-Date="Model.DocumentDate" Label="成文日期" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.Remarks" Label="备注" Lines="3" Variant="Variant.Outlined" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">取消</MudButton>
        <MudButton Color="MudBlazor.Color.Primary" OnClick="Submit" Disabled="@(!_isValid)">提交</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public Guid? Id { get; set; } // 接收 Edit ID

    private CreateUpdateDecisionDocumentDto Model { get; set; } = new();
    private ProjectDto? _selectedProject;
    private string _currentCode; // 仅用于显示编辑时的编号
    private MudForm _form;
    private bool _isValid;

    protected override async Task OnInitializedAsync()
    {
        if (Id.HasValue)
        {
            var dto = await _decisionService.GetAsync(Id.Value);
            // 回填数据
            Model.Category = dto.Category;
            Model.DocumentCode = dto.DocumentCode;
            Model.DocumentDate = dto.DocumentDate;
            Model.Name = dto.Name;
            Model.ProjectId = dto.ProjectId;
            Model.Project = dto.Project;
            Model.ReferenceNumber = dto.ReferenceNumber;
            Model.Remarks = dto.Remarks;

            _currentCode = dto.DocumentCode;

            // 加载选中的项目用于显示
            if (dto.ProjectId != Guid.Empty)
            {
                // 调用 ProjectAppService 获取完整的 ProjectDto
                var projectDto = await _projectAppService.GetAsync(dto.ProjectId);

                // 赋值给绑定的变量
                _selectedProject = projectDto;

                // 同时也赋值给 Model (因为你的 DTO 里有这个属性)
                Model.Project = projectDto;
                Model.ProjectId = projectDto.Id; // 存 ID (双重保险)
            }
        }
    }

    private async Task<IEnumerable<ProjectDto>> SearchProjects(string value, CancellationToken token)
    {
        var result = await _projectAppService.GetListAsync(new PagedAndSortedResultRequestDto { MaxResultCount = 20 });
        if (string.IsNullOrEmpty(value)) 
            return result.Items;

        return result.Items.Where(p =>
            (p.Name != null && p.Name.Contains(value, StringComparison.InvariantCultureIgnoreCase)) ||
            (p.ProjectCode != null && p.ProjectCode.Contains(value, StringComparison.InvariantCultureIgnoreCase))
        );
    }

    // 项目选中变更
    private void OnProjectChanged(ProjectDto project)
    {
        _selectedProject = project;
        if (project != null) 
        {
            Model.Project = project;
            Model.ProjectId = project.Id; // 存 ID (双重保险)
        }
    }

    // 提交表单
    private async Task Submit()
    {
        await _form.Validate();
        if (_form.IsValid)
        {
            try
            {
                if (Id.HasValue)
                {
                    await _decisionService.UpdateAsync(Id.Value, Model);
                }
                else
                {
                    await _decisionService.CreateAsync(Model);
                }

                MudDialog.Close(DialogResult.Ok(true));
            }
            catch (Exception ex)
            {
                // 这里可以处理异常，或者交给全局异常处理器
                Console.WriteLine(ex.Message);
            }


            MudDialog.Close(DialogResult.Ok(true));
        }
    }

    private void Cancel() => MudDialog.Cancel();
}