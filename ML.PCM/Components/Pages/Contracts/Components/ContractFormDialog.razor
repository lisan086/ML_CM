@using ML.PCM.Services.Contracts
@using ML.PCM.Services.Projects
@using ML.PCM.Services.Procurements
@using ML.PCM.Services.DecisionDocuments
@using ML.PCM.Services.Dtos.Contracts
@using ML.PCM.Services.Dtos.Projects
@using ML.PCM.Services.Dtos.Procurements
@using ML.PCM.Services.Dtos.DecisionDocuments
@using ML.PCM.Enums
@using Volo.Abp.Application.Dtos
@using Microsoft.Extensions.Localization
@using ML.PCM.Localization

@inject IProjectAppService _projectAppService
@inject IContractAppService _contractAppService
@inject IProcurementAppService _procurementAppService
@inject IDecisionDocumentAppService _decisionAppService
@inject IStringLocalizer<PCMResource> L

<MudDialog>
    <TitleContent><MudText Typo="Typo.h6">@(Id.HasValue ? "编辑" : "新建") 合同</MudText></TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_isValid">
            <MudGrid>
                <!-- 1. 项目选择 (级联根节点) -->
                <MudItem xs="12">
                    <MudAutocomplete T="ProjectDto" Label="所属项目"
                                     Value="_selectedProject"
                                     ValueChanged="OnProjectChanged"
                                     SearchFunc="@SearchProjects"
                                     ToStringFunc="@(p => p == null ? null : $"{p.ProjectCode} - {p.Name}")"
                                     Required="true" RequiredError="必须选择一个项目"
                                     Disabled="@Id.HasValue"
                                     Variant="Variant.Outlined"
                                     AdornmentIcon="@Icons.Material.Filled.Search" />
                </MudItem>

                <!-- 2. 招采文件 (级联选择) -->
                <MudItem xs="12">
                    <MudAutocomplete T="ProcurementDto" Label="关联招采文件 (可选)"
                                     @bind-Value="_selectedProcurement"
                                     SearchFunc="@SearchProcurements"
                                     ToStringFunc="@(p => p == null ? null : $"{p.DocumentCode} - {p.Summary}")"
                                     Clearable="true"
                                     Disabled="@(_selectedProject == null)"
                                     Variant="Variant.Outlined" />
                </MudItem>

                <!-- 3. 决策文件 (级联多选) -->
                <MudItem xs="12">
                    <MudSelect T="Guid" Label="关联决策文件 (可多选)" MultiSelection="true"
                               @bind-SelectedValues="_selectedDecisionIds"
                               Disabled="@(_selectedProject == null)"
                               Variant="Variant.Outlined"
                               AnchorOrigin="Origin.BottomCenter">
                        @foreach (var decision in _availableDecisions)
                        {
                            <MudSelectItem T="Guid" Value="@decision.Id">@($"{decision.DocumentCode} - {decision.Name}")</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <!-- 基础字段 -->
                <MudItem xs="12" md="6">
                    <MudTextField Value="@(Id.HasValue? _currentCode : "自动生成")" Label="合同编号" Variant="Variant.Outlined" ReadOnly="true" Disabled="true" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudSelect T="ContractCategory ?" @bind-Value="Model.Category" Label="合同分类" Variant="Variant.Outlined">
                        <MudSelectItem T="ContractCategory ?" Value="null">无</MudSelectItem>
                        @foreach (ContractCategory cat in Enum.GetValues(typeof(ContractCategory)))
                        {
                            <MudSelectItem T="ContractCategory ?" Value="@cat">@L[$"Enum:ContractCategory.{cat}"]</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.Name" Label="合同名称" Required="true" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudNumericField @bind-Value="Model.ContractAmount" Label="合同金额" Format="N2" Required="true" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6"><MudDatePicker @bind-Date="Model.SigningDate" Label="签订日期" Variant="Variant.Outlined" /></MudItem>
                <MudItem xs="12" md="6"><MudTextField @bind-Value="Model.PartyB" Label="乙方单位" Variant="Variant.Outlined" /></MudItem>
                <MudItem xs="12" md="6"><MudTextField @bind-Value="Model.ContactPerson" Label="联系人" Variant="Variant.Outlined" /></MudItem>

                <MudItem xs="12">
                    <MudCheckBox T="bool" @bind-Checked="Model.IsVirtual" Label="是否为虚拟合同 (用于无合同支付)" Color="MudBlazor.Color.Primary" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.Remarks" Label="备注" Lines="2" Variant="Variant.Outlined" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">取消</MudButton>
        <MudButton Color="MudBlazor.Color.Primary" OnClick="Submit" Disabled="@(!_isValid)">提交</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public Guid? Id { get; set; }

    private CreateUpdateContractDto Model { get; set; } = new();

    // UI 绑定对象
    private ProjectDto? _selectedProject;
    private ProcurementDto? _selectedProcurement;
    private IEnumerable<Guid> _selectedDecisionIds = new HashSet<Guid>();

    // 级联数据源
    private List<ProcurementDto> _availableProcurements = new(); // 用于 Autocomplete Search
    private List<DecisionDocumentDto> _availableDecisions = new(); // 用于 MudSelect

    private string _currentCode;
    private MudForm _form;
    private bool _isValid;

    protected override async Task OnInitializedAsync()
    {
        if (Id.HasValue)
        {
            var dto = await _contractAppService.GetAsync(Id.Value);

            // 基础回填
            Model.Name = dto.Name;
            Model.Category = dto.Category;
            Model.ContractAmount = dto.ContractAmount;
            Model.SigningDate = dto.SigningDate;
            Model.PartyB = dto.PartyB;
            Model.ContactPerson = dto.ContactPerson;
            Model.IsVirtual = dto.IsVirtual;
            Model.Remarks = dto.Remarks;
            Model.ProjectId = dto.ProjectId;
            Model.ProcurementId = dto.ProcurementId;

            _currentCode = dto.DocumentCode;

            // 1. 回显项目 (核心)
            if (dto.ProjectId != Guid.Empty)
            {
                var pDto = await _projectAppService.GetAsync(dto.ProjectId);
                _selectedProject = pDto;
                Model.Project = pDto;

                // 2. 加载该项目下的级联数据
                await LoadDependencies(dto.ProjectId);
            }

            // 3. 回显招采
            if (dto.ProcurementId.HasValue && dto.ProcurementId != Guid.Empty)
            {
                // 注意：这里需要确保 _availableProcurements 已加载，或者单独查
                _selectedProcurement = _availableProcurements.FirstOrDefault(x => x.Id == dto.ProcurementId);
                Model.Procurement = _selectedProcurement;
            }

            // 4. 回显决策
            if (dto.RelatedDecisions != null)
            {
                _selectedDecisionIds = dto.RelatedDecisions.Select(x => x.Id).ToHashSet();
            }
        }
    }

    // 搜索项目
    private async Task<IEnumerable<ProjectDto>> SearchProjects(string value, CancellationToken token)
    {
        var result = await _projectAppService.GetListAsync(new PagedAndSortedResultRequestDto { MaxResultCount = 20 });
        if (string.IsNullOrEmpty(value)) return result.Items;
        return result.Items.Where(p => p.Name.Contains(value) || p.ProjectCode.Contains(value));
    }

    // 搜索招采 (内存过滤)
    private Task<IEnumerable<ProcurementDto>> SearchProcurements(string value, CancellationToken token)
    {
        if (string.IsNullOrEmpty(value))
            return Task.FromResult(_availableProcurements.AsEnumerable());

        return Task.FromResult(_availableProcurements.Where(p =>
            (p.Summary != null && p.Summary.Contains(value)) ||
            p.DocumentCode.Contains(value)));
    }

    // 项目变更 -> 触发级联
    private async Task OnProjectChanged(ProjectDto project)
    {
        _selectedProject = project;

        // 清空下级
        _selectedProcurement = null;
        Model.ProcurementId = null;
        _selectedDecisionIds = new HashSet<Guid>();
        _availableProcurements.Clear();
        _availableDecisions.Clear();

        if (project != null)
        {
            Model.Project = project;
            Model.ProjectId = project.Id;
            await LoadDependencies(project.Id);
        }
    }

    private async Task LoadDependencies(Guid projectId)
    {
        // 加载该项目的招采 (这里简化为获取所有再内存过滤，实际应调用后端带Filter的API)
        // 建议在 ProcurementAppService 加 GetListByProjectAsync
        var pResult = await _procurementAppService.GetListAsync(new PagedAndSortedResultRequestDto { MaxResultCount = 1000 });
        _availableProcurements = pResult.Items.Where(x => x.ProjectId == projectId).ToList();

        // 加载该项目的决策
        var dResult = await _decisionAppService.GetListAsync(new PagedAndSortedResultRequestDto { MaxResultCount = 1000 });
        _availableDecisions = dResult.Items.Where(x => x.ProjectId == projectId).ToList();
    }

    private async Task Submit()
    {
        await _form.Validate();
        if (_form.IsValid)
        {
            // 绑定选中的值到 Model
            Model.ProcurementId = _selectedProcurement?.Id;
            Model.Procurement = _selectedProcurement; 
            Model.RelatedDecisionIds = _selectedDecisionIds.ToList();

            try
            {
                if (Id.HasValue)
                    await _contractAppService.UpdateAsync(Id.Value, Model);
                else
                    await _contractAppService.CreateAsync(Model);

                MudDialog.Close(DialogResult.Ok(true));
            }
            catch (Exception ex)
            {
                // 这里可以处理异常，或者交给全局异常处理器
                Console.WriteLine(ex.Message);
            }
        }
    }

    private void Cancel() => MudDialog.Cancel();
}